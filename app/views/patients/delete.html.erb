<%= link_to("Go back to list", patients_path, :class => 'back-link') %>

<div class="patients delete">
  <h2>Delete Patient <%= @patient.full_name%></h2>

  <%= form_for(@patient, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this patient?</p>
    <div class="form-buttons">
      <%= f.submit("Delete Patient") %>
    </div>

  <% end %>
</div>
